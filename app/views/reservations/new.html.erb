<%= form_for @reservation do |f| %>
  Start date: <%= f.text_field :start_at_date, 'data-behaviour' => 'datepicker' %><br />
  
  Start time: <div class='input-append bootstrap-timepicker' style='display: inline;'>
    <%= f.text_field :start_at_time, :class => "input-small", 'data-behaviour' => 'timepicker' %>
    <span class='add-on'><i class='icon-time'></i></span>
  </div> <br/>
<br>
  End date: <%= f.text_field :end_at_date, 'data-behaviour' => 'datepicker' %><br />

 End time <div class='input-append bootstrap-timepicker' style='display: inline;'>
    <%= f.text_field :end_at_time, :class => "input-small", 'data-behaviour' => 'timepicker', 'data-time' => @reservation %>
    <span class='add-on'><i class='icon-time'></i></span>
  </div> <br/>
<br>
  <%= f.submit %>
<% end %>